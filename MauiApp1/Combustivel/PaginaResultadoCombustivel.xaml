<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Combustivel.PaginaResultadoCombustivel"
             Title="Resultado">

    <VerticalStackLayout Spacing="20" Padding="30">

        <Image x:Name="gasolina"
            Source="gasolina.jpg"
            HeightRequest="256"
            Aspect="AspectFit"
            IsVisible="False"
            SemanticProperties.Description="Gasolina melhor no momento" />

        <Image x:Name="etanol"
            Source="etanol.png"
            HeightRequest="306"
            Aspect="AspectFit"
            IsVisible="False"
            SemanticProperties.Description="Etanol melhor no momento" />

        <Label x:Name="lblResultado"
               FontSize="22"
               HorizontalOptions="Center"
               TextColor="Green" />

        <Button Text="Voltar"
                FontSize="18"
                Clicked="OnVoltarClicked"/>
    </VerticalStackLayout>
</ContentPage>
